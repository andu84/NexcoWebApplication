<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" />
    <link href="~/Content/alertifyjs/alertify.min.css" rel="stylesheet" />
    <link href="~/Content/alertifyjs/themes/default.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="navbar navbar-inverse " role="navigation">
        <a class="navbar-brand" href="~/budget/List"> Nexco Financial Management App</a>
        <div class="buttons pull-right">


            @Html.ActionLink("Home", "Home", "IncomeExpenditure", null,
             new { @class = "btn btn-info btn-sm " })


            @Html.ActionLink("How It Works", "HowItWorks", "IncomeExpenditure", null,
            new { @class = "btn btn-info btn-sm" })

            @Html.ActionLink("Support", "Support", "IncomeExpenditure", null,
            new { @class = "btn btn-info btn-sm" })
            @Html.ActionLink("About Us", "About", "IncomeExpenditure", null,
           new { @class = "btn btn-info btn-sm" })
            @{
                var userName = HttpContext.Current.User.Identity.Name;
                if (userName != "")
                {

                    <span class="btn-info btn btn-sm">
                        @Html.ActionLink(HttpContext.Current.User.Identity.Name + " -Logout", "Logout", "Account")
                    </span>
                }
            }
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
    <!-- Site footer -->
    <footer class="site-footer">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-6">
                    <h6>About</h6>
                    <p class="text-justify">
                        <i>
                            Designed to inspire you to manage your money
                            <bold>Nexco Personal Financial Management System</bold> help you to keep a record of your budget
                            every mounth, so that you can plan your expenses in a proportionate way to them and save more money.


                        </i>
                    </p>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-8 col-sm-6 col-xs-12">
                                <p class="copyright-text">
                                <p>&copy; @DateTime.Now.Year - Manea Alexandru </p>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xs-6 col-md-3">
                    <h6>Categories</h6>
                    <ul class="footer-links">
                        <li>
                            <a href="">Incomes Details</a>
                        </li>
                        <li>
                            <a href="">Expenditure Details</a>
                        </li>
                        <li>
                            <a href="">Avaible Budget</a>
                        </li>
                        <li>
                            <a href="">Income Charts</a>
                        </li>
                        <li>
                            <a href="">Expenditure Charts</a>
                        </li>
                    </ul>
                </div>

                <div class="col-xs-6 col-md-3">
                    <h6>Quick Links</h6>
                    <ul class="footer-links">
                        <li>
                            <a href="">About Us</a>
                        </li>
                        <li>
                            <a href="">Contact Us</a>
                        </li>
                        <li>
                            <a href="">How is work?</a>
                        </li>
                        <li>
                            <a href="">Privacy Policy</a>
                        </li>
                        <li>
                            <a href="">Sitemap</a>
                        </li>
                    </ul>
                </div>
            </div>
            <hr>
        </div>
    </footer>
    <script src="~/Scripts/jquery-3.5.0.min.js"></script>

    <script src="~/Scripts/bootstrap.min.js"></script>

    <script src="~/Scripts/alertify.min.js"></script>

    @System.Web.Optimization.Scripts.Render("~/bundles/jquery")
    @System.Web.Optimization.Scripts.Render("~/bundles/bootstrap")
<script src="~/Scripts/alertify.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
