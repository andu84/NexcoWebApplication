@model NexcoWeb.Domain.Entities.Expenditure

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <div class="col-md-offset-2 col-md-10">
        <h2>Add Expenses</h2>
    </div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
 
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="control-label col-md-2">
                <b>Travel</b>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Travel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Travel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                <b>Groceries</b>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Food, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Food, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                <b>Entertaiment</b>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Entertaiment, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Entertaiment, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                <b>Auto</b>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Auto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Auto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                <b>Hosehold Expenses</b>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.HouseholdExpenses, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HouseholdExpenses, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                <b>Clothing</b>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Clothing, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Clothing, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                <b>Loan</b>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Loan, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Loan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                <b>Other Expenses</b>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.OtherExpenses, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OtherExpenses, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                <b>Mentions</b>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DescriptionExpenditure, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DescriptionExpenditure, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                <b>Added On</b>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ExpensesAddedOn, "{0:dd/MM/yyyy}", new { htmlAttributes = new { @class = "form-control input-sm datepicker", @type = "date" } })
                @Html.ValidationMessageFor(model => model.ExpensesAddedOn, "", new { @class = "text-danger" })
            </div>
        </div>

 

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Expenses" class="btn btn-info" />
                @Html.ActionLink("Cancel", "../Expenditure/List", null, new { @class = "btn btn-info" })
            </div>
        </div>
    </div>
}

