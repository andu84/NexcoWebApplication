@model IEnumerable<NexcoWeb.Domain.Entities.Budget>

@{
    ViewBag.Title = "IndexBudget";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>IndexBudget</h2>



<div class="panel panel-default">
    <div class="panel-heading">
        <div>All Budgets</div>
    </div>
    <div class="panel-body">
        
            <table class="table table-striped table-condesed table-bordered">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DescriptionBudget)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalBudget)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DisplayTextBudget)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DescriptionBudget)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalBudget)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DisplayTextBudget)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.BudgetId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.BudgetId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.BudgetId })
                        </td>
                    </tr>
                }
            </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add new Expenditure", "Create", null, new { @class = "btn btn-defaul" })
        @Html.ActionLink("Add new Incomes", "Create", null, new { @class = "btn btn-defaul" })
    </div>
</div>
